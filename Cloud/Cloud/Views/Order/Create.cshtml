@model IEnumerable<Cloud.Models.TblItem>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<form asp-action="Create" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Item's Name
                </th>
                <th>
                    Item's Instock
                </th>
                <th>
                    Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemInstock)
                    </td>
                    <td>
                        <input type="number" name="itemList[@item.ItemId].ItemInstock" id="instock-@item.ItemId">

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Edit" class="btn btn-danger" /> |
</form>
