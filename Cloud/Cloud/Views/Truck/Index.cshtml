@model IEnumerable<Cloud.Models.TblTruck>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TruckModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TruckLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmplId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TruckModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TruckLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmplId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TruckId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TruckId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TruckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
