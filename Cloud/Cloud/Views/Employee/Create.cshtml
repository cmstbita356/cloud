@model Cloud.Models.TblEmployee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Enter the new employee's information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmplFirstname" class="control-label">Employee's First name</label>
                <input asp-for="EmplFirstname" class="form-control" />
                <span asp-validation-for="EmplFirstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmplLastname" class="control-label">Employee's Last name</label>
                <input asp-for="EmplLastname" class="form-control"/>
                <span asp-validation-for="EmplLastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmplEmail" class="control-label">Employee's Email</label>
                <input asp-for="EmplEmail" class="form-control" />
                <span asp-validation-for="EmplEmail" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 1rem;">
                <input type="submit" value="Add to database" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

