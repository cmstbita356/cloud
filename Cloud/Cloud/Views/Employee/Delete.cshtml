@model Cloud.Models.TblEmployee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Fire employee</h1>

<h3>Are you sure you want to fire this employee?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmplFirstname)
        </dd>
        <dt class="col-sm-2">
            Last Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmplLastname)
        </dd>
        <dt class="col-sm-2">
            Company Id:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompId)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmplEmail)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmplId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Employee</a>
    </form>
</div>
